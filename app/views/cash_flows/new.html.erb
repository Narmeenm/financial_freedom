<div class="container">
	<div class="row cashflow-wrapper">
		<div class="col-xs-offset-1 col-xs-10">
			<%= simple_form_for(@cash_flow, method: :post, url: budget_cash_flows_path) do |f| %>
				<%= f.input :price_cents, label: "Add a new expense", as: :string %>
				<%= f.input :date, as: :string,  input_html: {class: "datepicker"}  %>

        <%= f.association :budget,  as: :radio_buttons, input_html: {class: "hide-checkbox"},label_html: {style: "width: auto; min-width:0;"}, label: 'Choose a category:', collection: @budgets.map { |e| [image_tag(e.category.photo),e.id] }%>
				<%= f.submit "Submit", :class => "submit_btn" %>
			<% end %>
		</div>
	</div>
</div>


