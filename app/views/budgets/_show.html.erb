
<div class="chart-info">
<p4>You've already spent: $<%= budget.spent%></p4>
<br>
<p4>You still have: $<%= budget.remaining %></p4>
<%= pie_chart(
        {"Money Left" => "#{budget.remaining}", "Money Spent" => "#{budget.spent}"},
        colors: ["#83a3a5", "#183287"],
        donut: true,
        prefix: "$",
        legend: "bottom",
        )%>
</div>
