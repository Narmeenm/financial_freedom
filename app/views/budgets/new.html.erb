<div class="container">
	<div class="row">
		<div class="col col-xs-12 budget-form">
			<%= simple_form_for [@budget] do |f| %>
      <%= f.input :amount_cents,  placeholder: 'Enter the amount'  %>
			  <%= f.input :description, label: false, placeholder: 'Description'  %>
			  <%= f.input :start_date, as: :string, input_html: { id: "range_start" }  %>
			  <%= f.input :end_date, as: :string, input_html: { id: "range_end" }  %>
			  <%= f.input :category_list ,as: :radio_buttons, collection:["Food & Drink","Bills & Fees", "Car", "Education", "Transport", "Clothes", "Home", "Entertainment","Healthcare"] %>
			  <%= f.submit %>
			<% end %>
		</div>
	</div>
</div>
