<div class="container">
	<div class="row">
		<div class="col-xs-offset-3 col-xs-6">
			<h1>budgets</h1>

            <table>
			  <thead>
			    <tr>
			      <th>Category_list</th>
			      <th>Description</th>
			      <th>Amount</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>
			    <tbody>
				<% @budgets.each do |budget| %>
				<tr>
				<td><%= budget.category_list %></td>
				<td><%= budget.description %></td>
				<td><%= budget.amount_cents %></td>
				<td><%= link_to 'Show', budget %></td>
		        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
		        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
			    </tr>
			   </tbody> 
		    </table>
		    <br>
            <%= link_to 'New budget', new_budget_path %>
		</div>
	</div>
</div>






